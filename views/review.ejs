<%- include("header") %>

<section>
	<div class="container">
		<div class="row">
            <div class="mt-5 mb-lg-5 col-4">
                <a href="/dashboard" class="btn btn-main btn-round-full">Dashboard</a>
            </div>
            <div class="mt-5 mb-lg-5 col-4">
                <a href="/logout" class="btn btn-main btn-round-full">Logout</a>
            </div>
            <div class="mt-5 mb-lg-5 col-4">
                <a href="/newwords" class="btn btn-main btn-round-full">Learn</a>
            </div>
		</div>
	</div>
</section>

<h3 class="text-center">If the word you selected is not getting deleted please again click on the checkbox.</h3>
<section class="features" style="margin-top:20px;">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="feature-block d-lg-flex">
                        <table class="table table-striped" onLoad="window.location.reload()">
                        <thead>
                          <tr>
                            <th scope="col text-center" style="width: 3%"></th>
                            <th scope="col text-center" style="width: 12%">Word</th>
                            <th scope="col text-center" style="width: 25%">Meaning</th>
                            <th scope="col text-center" style="width: 20%">Your Input 1</th>
                            <th scope="col text-center" style="width: 20%">Your Input 2</th>
                            <th scope="col text-center" style="width: 20%">Your Input 3</th>
                          </tr>
                        </thead>
                        <tbody>
                                <tr>
                                  <% 
                                user.knowledgeCheck.forEach(function(value,key){ %>
                                  <form action="/review" method="POST">
                                  <td><input type="checkbox" value=<%=key%> onChange="this.form.submit()" name="deletedItem"></td>
                                  <td><b><%= key %></b></td>
                                    <td><%= value[0] %></td>
                                    <td><%= value[1] %></td>
                                    <td><%= value[2] %></td>
                                    <td><%= value[3] %></td>
                                    
                                </form>
                                </tr>
                                <% }) %> 
                        </tbody>
                      </table>
				</div>
			</div>
		</div>
	</div>
</section>


<%- include("footer") %>